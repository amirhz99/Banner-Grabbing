@using System.Net.Mime
@using System.Web.UI.WebControls
@using BannerGrabbing.Models
@model TPortStatus

@{
    ViewBag.Title = "Result";
}

@{

    string userData;
    StreamReader read;
    for (;;)
    {
        try
        {
            read = new StreamReader(Server.MapPath("~/App_Data/file.txt"));
            userData = read.ReadToEnd();
            break;
        }
        catch (Exception e)
        {
            continue;
        }    
    }
}


<br />
<br />
<br />

<div class="row" style="text-align:left;direction:ltr">
    <div class=" col-lg-6 col-lg-push-3 col-md-6 col-md-push-3 col-xs-6 col-sm-6 col-sm-push-3">
        <div class="panel panel-warning">
            <div class="panel-heading text-center">
                @Html.Label("Banner Grabbing OutPut")
            </div>
            <div class=" form-group">
                
                @{

                    string[] datalines = userData.Split('\n');
                    foreach (string dataLine in datalines)
                    {
                        //TStatus pstatus = new TStatus();
                        //pstatus.PortStatus = dataLine;

                        @dataLine
                        <text>&nbsp;</text>
                        <br/>
                    }
                    read.Close();
                }

            </div>

        </div>
    </div>
</div>
